@{
    ViewData["Title"] = "Donate";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Donate to District 49</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" asp-controller="Donate" asp-action="Donate" class="card p-4 shadow">
                
                <!-- Quick Amount Selection -->
                <div class="mb-4">
                    <label class="form-label fw-bold">Quick Select Amount (ZAR):</label>
                    <div class="row">
                        <div class="col-4 mb-2">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="quickAmount" id="amount10" value="10" onclick="setAmount(10)">
                                <label class="form-check-label" for="amount10">R10</label>
                            </div>
                        </div>
                        <div class="col-4 mb-2">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="quickAmount" id="amount20" value="20" onclick="setAmount(20)">
                                <label class="form-check-label" for="amount20">R20</label>
                            </div>
                        </div>
                        <div class="col-4 mb-2">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="quickAmount" id="amount50" value="50" onclick="setAmount(50)">
                                <label class="form-check-label" for="amount50">R50</label>
                            </div>
                        </div>
                        <div class="col-4 mb-2">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="quickAmount" id="amount100" value="100" onclick="setAmount(100)">
                                <label class="form-check-label" for="amount100">R100</label>
                            </div>
                        </div>
                        <div class="col-4 mb-2">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="quickAmount" id="amount500" value="500" onclick="setAmount(500)">
                                <label class="form-check-label" for="amount500">R500</label>
                            </div>
                        </div>
                        <div class="col-4 mb-2">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="quickAmount" id="amount1000" value="1000" onclick="setAmount(1000)">
                                <label class="form-check-label" for="amount1000">R1000</label>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Custom Amount Input -->
                <div class="mb-3">
                    <label for="customAmount" class="form-label fw-bold">Or Enter Custom Amount (ZAR):</label>
                    <input type="number" step="0.01" name="amount" id="customAmount" class="form-control" min="10" required placeholder="Minimum R10" />
                    <div class="form-text">Minimum donation amount is R10</div>
                </div>

                <!-- Donor Information -->
                <div class="mb-3">
                    <label for="donorName" class="form-label fw-bold">Your Name:</label>
                    <input type="text" name="name" id="donorName" class="form-control" required placeholder="Enter your full name" />
                </div>

                <div class="mb-3">
                    <label for="donorEmail" class="form-label fw-bold">Email:</label>
                    <input type="email" name="email" id="donorEmail" class="form-control" required placeholder="Enter your email address" />
                    <div class="form-text">We'll send you a receipt to this email address</div>
                </div>

                <div class="mb-4">
                    <label for="donorMessage" class="form-label fw-bold">Message (optional):</label>
                    <textarea name="message" id="donorMessage" class="form-control" rows="3" placeholder="Leave a message with your donation (optional)"></textarea>
                </div>

                <!-- Submit Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-lock me-2"></i>Donate Securely with PayFast
                    </button>
                </div>

                <div class="text-center mt-3">
                    <small class="text-muted">
                        <i class="fas fa-shield-alt me-1"></i>
                        Secure payment processing powered by PayFast
                    </small>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function setAmount(amount) {
        document.getElementById('customAmount').value = amount;
        
        // Clear other radio buttons
        const radios = document.querySelectorAll('input[name="quickAmount"]');
        radios.forEach(radio => {
            if (radio.value != amount) {
                radio.checked = false;
            }
        });
    }

    // Clear radio buttons when custom amount is manually entered
    document.getElementById('customAmount').addEventListener('input', function() {
        const radios = document.querySelectorAll('input[name="quickAmount"]');
        radios.forEach(radio => radio.checked = false);
    });
</script>

<style>
    .form-check-input:checked {
        background-color: #28a745;
        border-color: #28a745;
    }
    
    .card {
        border: none;
        border-radius: 15px;
    }
    
    .btn-success {
        border-radius: 10px;
        font-weight: bold;
    }
    
    .form-control {
        border-radius: 8px;
    }
</style>