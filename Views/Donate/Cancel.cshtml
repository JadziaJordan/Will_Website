@{
    ViewData["Title"] = "Donation Cancelled";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card p-4 shadow border-warning">
                <div class="card-body">
                    <i class="fas fa-times-circle text-warning" style="font-size: 4rem;"></i>
                    <h2 class="text-warning mt-3">Donation Cancelled</h2>
                    <p class="lead">Your donation was not completed.</p>
                    <p class="text-muted">No charges were made to your account. You can try again anytime.</p>
                    
                    <div class="mt-4">
                        <a href="/donate" class="btn btn-success me-2">
                            <i class="fas fa-redo me-1"></i>Try Again
                        </a>
                        <a href="/" class="btn btn-outline-secondary">
                            <i class="fas fa-home me-1"></i>Return Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>