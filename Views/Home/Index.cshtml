<!-- CSS Files -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

<style>
    :root {
        --primary-color: #2c3e50;
        --secondary-color: #3498db;
        --accent-color: #ff5f6d;
    }
    
    body {
        background-color: #ffffff;
        font-family: 'Segoe UI', Roboto, 'Helvetica Neue', sans-serif;
        color: #333;
        overflow-x: hidden;
    }

    /* Enhanced Hero Slider */
    .hero-slider {
        position: relative;
        width: 100%;
        overflow: hidden;
        margin-bottom: 0;
    }

    .carousel-item {
        height: 90vh;
        min-height: 600px;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        position: relative;
    }

    .carousel-item::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.3);
    }

    .slider-caption {
        position: absolute;
        bottom: 25%;
        left: 0;
        right: 0;
        text-align: center;
        color: white;
        text-shadow: 2px 2px 5px rgba(0,0,0,0.5);
        padding: 0 15%;
        z-index: 1;
    }

    .slider-main-text {
        font-size: 4rem;
        font-weight: 800;
        margin-bottom: 1rem;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .slider-sub-text {
        font-size: 1.8rem;
        font-weight: 400;
        margin-bottom: 2rem;
    }

    .slider-btn {
        display: inline-block;
        background: var(--accent-color);
        color: white;
        padding: 12px 30px;
        border-radius: 30px;
        font-size: 1.1rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .slider-btn:hover {
        background: transparent;
        border-color: white;
        color: white;
        transform: translateY(-3px);
    }

    /* Sections */
    .section {
        padding: 80px 0;
        position: relative;
    }

    .section-title {
        text-align: center;
        margin-bottom: 50px;
        font-weight: 700;
        color: var(--primary-color);
        position: relative;
    }

    .section-title:after {
        content: "";
        display: block;
        width: 100px;
        height: 4px;
        background: linear-gradient(90deg, var(--accent-color), #ffc371);
        margin: 20px auto 0;
    }

    /* Mission Cards */
    .mission-card {
        padding: 40px 30px;
        text-align: center;
        border-radius: 8px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        height: 100%;
        transition: all 0.4s ease;
        border-top: 5px solid;
        background: white;
        margin: 10px;
    }

    .mission-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.12);
    }

    .mission-card.mission {
        border-top-color: var(--secondary-color);
    }

    .mission-card.vision {
        border-top-color: #2ecc71;
    }

    .mission-card h4 {
        font-weight: 700;
        margin-bottom: 20px;
        color: var(--primary-color);
        font-size: 1.5rem;
    }

    .mission-card .icon {
        font-size: 2.5rem;
        margin-bottom: 20px;
        color: inherit;
    }

    /* Gallery */
    .gallery-container {
        position: relative;
    }

    .gallery img {
        border-radius: 8px;
        margin-bottom: 20px;
        transition: all 0.4s ease;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        cursor: pointer;
    }

    .gallery img:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 25px rgba(0,0,0,0.2);
    }

    /* Stats Counter */
    .stats-section {
        background: linear-gradient(135deg, #2c3e50, #4a6491);
        color: white;
        padding: 60px 0;
        text-align: center;
    }

    .stat-item {
        text-align: center;
        padding: 20px;
    }

    .stat-number {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 10px;
        color: white;
    }

    .stat-label {
        font-size: 1.2rem;
        font-weight: 400;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Donate CTA */
    .donate-section {
        position: relative;
        background: url('/Images/robert-collins-tvc5imO5pXk-unsplash.jpg') center/cover no-repeat;
        padding: 100px 0;
        color: white;
        text-align: center;
    }

    .donate-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(44, 62, 80, 0.85);
    }

    .donate-btn {
        display: inline-block;
        background: linear-gradient(135deg, var(--accent-color), #ffc371);
        color: white;
        padding: 18px 45px;
        border-radius: 30px;
        font-size: 1.2rem;
        font-weight: 700;
        text-decoration: none;
        text-transform: uppercase;
        letter-spacing: 1px;
        box-shadow: 0 5px 20px rgba(255, 95, 109, 0.4);
        transition: all 0.3s ease;
        position: relative;
        z-index: 1;
        border: none;
    }

    .donate-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(255, 95, 109, 0.6);
        color: white;
    }

    /* Testimonials */
    .testimonial-card {
        background: white;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        margin: 15px;
        position: relative;
    }

    .testimonial-card:after {
        content: '\201D';
        position: absolute;
        top: 20px;
        right: 30px;
        font-size: 4rem;
        color: rgba(0,0,0,0.05);
        font-family: serif;
    }

    .testimonial-text {
        font-style: italic;
        margin-bottom: 20px;
    }

    .testimonial-author {
        font-weight: 700;
        color: var(--secondary-color);
    }

    /* Carousel Controls */
    .carousel-control-prev, 
    .carousel-control-next {
        width: 50px;
        height: 50px;
        background: rgba(0,0,0,0.3);
        border-radius: 50%;
        top: 50%;
        transform: translateY(-50%);
        opacity: 1;
        transition: all 0.3s ease;
    }

    .carousel-control-prev:hover, 
    .carousel-control-next:hover {
        background: rgba(0,0,0,0.6);
    }

    .carousel-control-prev {
        left: 30px;
    }

    .carousel-control-next {
        right: 30px;
    }

    .carousel-indicators li {
        width: 15px;
        height: 15px;
        border-radius: 50%;
        background-color: rgba(255,255,255,0.5);
        margin: 0 8px;
    }

    .carousel-indicators .active {
        background-color: white;
        transform: scale(1.2);
    }

    /* Responsive Adjustments */
    @@media (max-width: 768px) {
        .slider-main-text {
            font-size: 2.5rem;
        }
        .slider-sub-text {
            font-size: 1.3rem;
        }
        .carousel-item {
            height: 70vh;
            min-height: 400px;
        }
    }
</style>

