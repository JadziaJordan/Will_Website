@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>District 49 Child and Youth Care</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

    <style>
        /* Navbar container */
        .navbar {
            background-color: white;
            border-bottom: 1px solid #ddd;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
            position: sticky;
            top: 0;
            z-index: 1000;
            padding: 0.5rem 1rem;
        }

        /* Brand styling */
        .navbar-brand {
            font-weight: bold;
            color: #333 !important;
            font-size: 1.2rem;
            margin-right: 2rem;
        }

        /* Nav links */
        .nav-link {
            color: #333 !important;
            padding: 0.8rem 1.5rem;
            font-weight: 500;
            transition: all 0.2s ease;
            position: relative;
        }

        /* Hover effect */
        .nav-link:hover {
            color: #000 !important;
            background-color: #f8f9fa;
        }

        /* Active link */
        .nav-link.active {
            font-weight: 600;
        }

        /* Rainbow dividers */
        .navbar-nav .nav-item:not(:last-child) {
            position: relative;
        }

        .navbar-nav .nav-item:not(:last-child)::after {
            content: "";
            position: absolute;
            right: 0;
            top: 25%;
            height: 50%;
            width: 1px;
        }

        /* Rainbow colors for dividers */
        .navbar-nav .nav-item:nth-child(1)::after { background-color: red; }
        .navbar-nav .nav-item:nth-child(2)::after { background-color: orange; }
        .navbar-nav .nav-item:nth-child(3)::after { background-color: gold; }
        .navbar-nav .nav-item:nth-child(4)::after { background-color: green; }
        .navbar-nav .nav-item:nth-child(5)::after { background-color: blue; }
        .navbar-nav .nav-item:nth-child(6)::after { background-color: indigo; }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">
            District 49 Child and Youth Care
        </a>

        <!-- Mobile menu toggle -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainNav"
                aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Menu items -->
        <div class="collapse navbar-collapse" id="mainNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Finance", "Index", "Finance", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("About Us", "Index", "AboutUs", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("News", "Index", "News", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Contact", "Index", "Contact", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Donate", "Index", "Donate", null, new { @class = "nav-link" })</li>
            </ul>
        </div>
    </nav>

    <!-- Main content -->
    <div class="container-fluid p-0">
        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>